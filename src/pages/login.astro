---
import Layout from '../layouts/Layout.astro';
const pageTitle = "Login";
---

<Layout pageTitle={pageTitle}>
  <div class="max-w-md mx-auto bg-gray-900 text-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-4">Login</h1>
    <form id="loginForm" class="flex flex-col gap-4">
      <input type="email" name="email" placeholder="Email" required class="border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-black" />
      <input type="password" name="password" placeholder="Password" required class="border border-gray-300 p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-black" />
      <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700">Log In</button>
      <p id="errorMessage" class="text-red-500 text-sm mt-2"></p>
    </form>
    <p class="mt-4 text-sm">
      Donâ€™t have an account? <a href="/register" class="text-white underline">Register</a>
    </p>
  </div>

  <script type="module">
    const form = document.getElementById('loginForm');
    const errorMessage = document.getElementById('errorMessage');

    form.addEventListener('submit', async (e) => {
  e.preventDefault();

  const formData = new URLSearchParams(new FormData(form)); // <-- change here

  const res = await fetch('/api/login', {
    method: 'POST',
    body: formData, // now sent as application/x-www-form-urlencoded
  });

  if (!res.ok) {
    const text = await res.text();
    errorMessage.textContent = text;
    return;
  }

  window.location.href = '/dashboard';
});

  </script>
</Layout>
