---
import Layout from '../layouts/Layout.astro';
const pageTitle = "Login";
---

<Layout>
  <div class="max-w-md mx-auto bg-gray-900 text-white p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-4">Login</h1>
    <form method="POST" action="/api/login" class="flex flex-col gap-4">
      <input type="email" name="email" placeholder="Email" required class="p-2 rounded bg-gray-800 border border-gray-700" />
      <input type="password" name="password" placeholder="Password" required class="p-2 rounded bg-gray-800 border border-gray-700" />
      <button type="submit" class="bg-blue-600 py-2 rounded hover:bg-blue-700">Log In</button>
    </form>
    <p class="mt-4 text-sm">
      Donâ€™t have an account? <a href="/register" class="text-blue-400 hover:underline">Register</a>
    </p>
  </div>
</Layout>
