---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <h1 class="text-3xl font-bold text-gray-800 mb-4">Welcome to the App</h1>
  <p class="text-gray-600 mb-6">Please log in or sign up to access the dashboard.</p>

  <div class="flex flex-col gap-3 items-center">
    <a href="/login" class="text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded w-32 text-center">
      Log In
    </a>
    <a href="/signup" class="text-blue-600 hover:underline">
      Sign Up
    </a>
  </div>

  <div class="bg-blue-500 text-white p-4 rounded-lg">
    Tailwind is working!
  </div>
</Layout>